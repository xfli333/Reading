<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView android:layout_width="290dp"
               android:layout_height="180dp" android:id="@+id/ItemImage"></ImageView>
    <TextView android:layout_height="wrap_content" android:id="@+id/ItemText"
              android:layout_width="wrap_content" android:textColor="#000" android:visibility="gone"
              android:layout_below="@+id/ItemImage"></TextView>


</RelativeLayout>
